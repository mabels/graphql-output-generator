{
  "name": "graphql-output-generator",
  "version": "1.5.4",
  "description": "A query output generator from graphql output types. ",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "typings": "lib/index.d.ts",
  "license": "AFL-2.0",
  "author": {
    "name": "Meno Abels"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mabels/graphql-output-generator.git"
  },
  "homepage": "https://github.com/mabels/graphql-output-generator#readme",
  "engines": {
    "node": ">8.0.0"
  },
  "scripts": {
    "clean": "rimraf lib esm",
    "start": "npm run build && npm run test",
    "build": "npm run build:commonjs && npm run build:esm",
    "build:commonjs": "tsc --project .",
    "build:esm": "tsc --project . --outdir esm --module esnext",
    "test": "jest -c jest.unit.js",
    "test:integration": "jest -c jest.integration.js",
    "lint": "tslint --project .",
    "prerelease": "git checkout master && git pull --ff-only origin master && npm run && npm run clean && npm run lint && npm run test && npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "dependencies": {
    "graphql": "^0.13.2",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "typescript": "3.3.3333",
    "@types/jest": "24.0.9",
    "@types/node": "10.12.24",
    "@types/graphql": "0.13.4",
    "@types/acorn": "4.0.5",
    "husky": "1.3.1",
    "rimraf": "2.6.3",
    "acorn": "6.1.1",
    "jest": "24.1.0",
    "jest-cli": "24.1.0",
    "lint-staged": "8.1.4",
    "prettier": "1.16.4",
    "standard-version": "5.0.1",
    "ts-jest": "24.0.0",
    "ts-loader": "5.3.3",
    "tslint": "5.13.1",
    "tslint-config-prettier": "1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticPrefix": "chore:",
    "devDependencies": {
      "automerge": true
    },
    "packageRules": [
      {
        "packagePatterns": [
          "@types/"
        ],
        "automerge": true
      }
    ]
  },
  "resolutions": {
    "merge": ">=1.2.1"
  }
}
