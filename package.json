{
  "name": "graphql-output-generator",
  "version": "1.5.4",
  "description": "A query output generator from graphql output types. ",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "typings": "lib/index.d.ts",
  "license": "AFL-2.0",
  "author": {
    "name": "Meno Abels"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mabels/graphql-output-generator.git"
  },
  "homepage": "https://github.com/mabels/graphql-output-generator#readme",
  "engines": {
    "node": ">8.0.0"
  },
  "scripts": {
    "clean": "rimraf lib esm",
    "start": "npm run build && npm run test",
    "build": "npm run build:commonjs && npm run build:esm",
    "build:commonjs": "tsc --project .",
    "build:esm": "tsc --project . --outdir esm --module esnext",
    "test": "jest -c jest.unit.js",
    "test:integration": "jest -c jest.integration.js",
    "lint": "tslint --project .",
    "prerelease": "git checkout master && git pull --ff-only origin master && npm run && npm run clean && npm run lint && npm run test && npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "dependencies": {
    "graphql": "^16.0.0",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "4.9.5",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.14",
    "@types/graphql": "14.2.3",
    "@types/acorn": "4.0.6",
    "husky": "7.0.4",
    "rimraf": "3.0.2",
    "acorn": "8.6.0",
    "jest": "27.4.5",
    "jest-cli": "27.4.5",
    "lint-staged": "12.1.2",
    "prettier": "2.5.1",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.2",
    "ts-loader": "9.2.6",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticPrefix": "chore:",
    "devDependencies": {
      "automerge": true
    },
    "packageRules": [
      {
        "packagePatterns": [
          "@types/"
        ],
        "automerge": true
      }
    ]
  },
  "resolutions": {
    "merge": ">=1.2.1"
  }
}
