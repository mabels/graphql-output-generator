{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "lib",
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
  "include": ["./src/**/*.ts", "./typings/**/*.d.ts"],
  "exclude": ["./src/test", "./src/**/*.test.ts"]
}
